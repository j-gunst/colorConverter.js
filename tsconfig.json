{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false
  },
  "include": ["src/**/*", "__tests__/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
